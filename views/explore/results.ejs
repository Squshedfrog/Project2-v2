<section class="display-results">
    <% for (let recipe of recipes) { %>
  
    <div class="display-card">
        <a href="/recipe/<%= recipe.id %>"><h2><%= recipe.name %></h2>
            <img src="<%= recipe.img_url %>" alt="" />
            <% let totalHr = recipe.cook_time[0]  + recipe.pre_time[0] %>
            <% let totalMin = recipe.cook_time[1]  + recipe.pre_time[1] %>
            <span> <%= totalHr %> hr <%= totalMin %> min</span>
        </a>
    </div>
  
    <% } %>
  </section>
  